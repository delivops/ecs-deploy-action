{
  "containerDefinitions": [
    {
      "command": [
        "-c",
        "for secret in ${SECRET_FILES//,/ }; do echo \"Fetching $secret...\"; aws secretsmanager get-secret-value --secret-id $secret --region $AWS_REGION --query SecretString --output text > /etc/secrets/$secret; if [ $? -eq 0 ] && [ -s /etc/secrets/$secret ]; then echo \"\u2705 Successfully saved $secret to /etc/secrets/$secret\"; else echo \"\u274c Failed to save $secret\" >&2; exit 1; fi; done"
      ],
      "entryPoint": [
        "/bin/sh"
      ],
      "environment": [
        {
          "name": "SECRET_FILES",
          "value": "snowflake-1,other-secret-name"
        },
        {
          "name": "AWS_REGION",
          "value": "us-east-1"
        }
      ],
      "essential": false,
      "image": "public.ecr.aws/aws-cli/aws-cli:latest",
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/test-cluster/test-service",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ssm-file-downloader"
        }
      },
      "mountPoints": [
        {
          "containerPath": "/etc/secrets",
          "sourceVolume": "shared-volume"
        }
      ],
      "name": "init-container-for-secret-files"
    },
    {
      "command": [
        "hello"
      ],
      "dependsOn": [
        {
          "condition": "SUCCESS",
          "containerName": "init-container-for-secret-files"
        },
        {
          "condition": "START",
          "containerName": "fluent-bit"
        }
      ],
      "entryPoint": [
        "world"
      ],
      "environment": [
        {
          "name": "NODE_ENV",
          "value": "production"
        },
        {
          "name": "API_KEY",
          "value": "xyz123"
        }
      ],
      "essential": true,
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "curl -f http://localhost/ || exit 1"
        ],
        "interval": 30,
        "retries": 3,
        "startPeriod": 10,
        "timeout": 5
      },
      "image": "123456789012.dkr.ecr.us-east-1.amazonaws.com/test-app:latest",
      "logConfiguration": {
        "logDriver": "awsfirelens",
        "options": {}
      },
      "mountPoints": [
        {
          "containerPath": "/etc/secrets",
          "sourceVolume": "shared-volume"
        }
      ],
      "name": "app",
      "portMappings": [
        {
          "appProtocol": "http",
          "containerPort": 8080,
          "hostPort": 8080,
          "name": "default",
          "protocol": "tcp"
        },
        {
          "appProtocol": "http",
          "containerPort": 8081,
          "hostPort": 8081,
          "name": "name",
          "protocol": "tcp"
        },
        {
          "appProtocol": "http",
          "containerPort": 8082,
          "hostPort": 8082,
          "name": "name2",
          "protocol": "tcp"
        }
      ],
      "secrets": [
        {
          "name": "CLIENT_ID",
          "valueFrom": "arn:aws:secretsmanager::secret:ava-cortex-analyst-production-IhUQht:CLIENT_ID::"
        },
        {
          "name": "CLIENT_NAME",
          "valueFrom": "arn:aws:secretsmanager::secret:ava-cortex-analyst-production-IhUQht:CLIENT_NAME::"
        }
      ]
    },
    {
      "environment": [
        {
          "name": "SERVICE_NAME",
          "value": "test-service"
        },
        {
          "name": "ENV",
          "value": "test-cluster"
        }
      ],
      "essential": true,
      "firelensConfiguration": {
        "options": {
          "config-file-type": "file",
          "config-file-value": "extra/extra.conf",
          "enable-ecs-log-metadata": "true"
        },
        "type": "fluentbit"
      },
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "curl -f http://127.0.0.1:2020/api/v1/health || exit 1"
        ],
        "interval": 10,
        "retries": 3,
        "startPeriod": 5,
        "timeout": 5
      },
      "image": "123456789012.dkr.ecr.us-east-1.amazonaws.com/fluent-bit:latest",
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/test-cluster/test-service",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "fluentbit"
        }
      },
      "name": "fluent-bit"
    },
    {
      "command": [
        "--config",
        "env:SSM_CONFIG"
      ],
      "environment": [
        {
          "name": "METRICS_PATH",
          "value": "/metrics"
        },
        {
          "name": "METRICS_PORT",
          "value": "8080"
        }
      ],
      "essential": true,
      "image": "public.ecr.aws/aws-observability/aws-otel-collector:latest",
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/test-cluster/test-service",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "otel-collector"
        }
      },
      "name": "otel-collector",
      "portMappings": [
        {
          "appProtocol": "grpc",
          "containerPort": 4317,
          "hostPort": 4317,
          "name": "otel-collector-4317-tcp",
          "protocol": "tcp"
        },
        {
          "containerPort": 4318,
          "hostPort": 4318,
          "name": "otel-collector-4318-tcp",
          "protocol": "tcp"
        }
      ],
      "secrets": [
        {
          "name": "SSM_CONFIG",
          "valueFrom": "adot-config-global.yaml"
        }
      ]
    }
  ],
  "cpu": "512",
  "executionRoleArn": "arn:aws:iam::123456789012:role/ecsTaskExecutionRole",
  "family": "test-cluster_test-service",
  "memory": "1024",
  "networkMode": "awsvpc",
  "requiresCompatibilities": [
    "FARGATE"
  ],
  "runtimePlatform": {
    "cpuArchitecture": "ARM64",
    "operatingSystemFamily": "LINUX"
  },
  "taskRoleArn": "arn:aws:iam::123456789012:role/ecsTaskExecutionRole",
  "volumes": [
    {
      "host": {},
      "name": "shared-volume"
    }
  ]
}